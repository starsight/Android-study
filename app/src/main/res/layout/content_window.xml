<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wenjiehe.android_study.restart.WindowActivity"
    tools:showIn="@layout/activity_window">

    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintRight_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_height="match_parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.wenjiehe.android_study.restart.StretchableFloatingButton
            android:layout_gravity="center_vertical"
            android:id="@+id/stretchbutton"
            app:bacColor="@color/colorAccent"
            app:textContent="nihaa"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            >
        </com.wenjiehe.android_study.restart.StretchableFloatingButton>
    </LinearLayout>



</android.support.constraint.ConstraintLayout>
